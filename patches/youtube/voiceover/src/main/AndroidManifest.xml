<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.revanced.integrations.youtube.voiceover">

    <!-- Разрешения для сетевого доступа -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- Разрешения для аудио -->
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    
    <!-- Разрешения для уведомлений -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    
    <!-- Разрешения для хранилища (кэш) -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    
    <!-- Разрешения для фоновой работы -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    
    <application>
        <!-- Сервис для фонового воспроизведения переводов -->
        <service
            android:name=".service.VoiceOverTranslationService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback" />
        
        <!-- Receiver для управления аудио -->
        <receiver
            android:name=".receiver.AudioFocusReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.media.AUDIO_BECOMING_NOISY" />
                <action android:name="android.intent.action.HEADSET_PLUG" />
            </intent-filter>
        </receiver>
        
        <!-- Provider для настроек -->
        <provider
            android:name=".provider.VoiceOverSettingsProvider"
            android:authorities="app.revanced.voiceover.settings"
            android:enabled="true"
            android:exported="false" />
    </application>

</manifest> 